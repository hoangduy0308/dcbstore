@model IEnumerable<DCBStore.Models.Product>
@using Microsoft.AspNetCore.Identity
@using DCBStore.Data
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Tất cả Sản phẩm";
    int currentPage = (int)(ViewData["CurrentPage"] ?? 1);
    int totalPages = (int)(ViewData["TotalPages"] ?? 1);
    string? currentFilter = ViewData["CurrentFilter"] as string;
    int? currentCategory = ViewData["CurrentCategory"] as int?;
    var categories = ViewData["Categories"] as List<Category>;
}

<style>
    /* CSS cho badge "Đã bán" */
    .sold-badge {
        position: absolute;
        top: 10px;
        left: 10px;
        background-color: rgba(0, 0, 0, 0.6); /* Nền tối mờ */
        color: white;
        padding: 5px 8px;
        border-radius: 5px;
        font-size: 0.85rem;
        font-weight: 600;
        z-index: 10; /* Đảm bảo nó nằm trên ảnh */
    }
    .product-card-img-container {
        position: relative; /* Quan trọng để .sold-badge định vị đúng */
        overflow: hidden; /* Đảm bảo không có gì tràn ra ngoài */
    }
    .card-img-top {
        transition: transform 0.3s ease; /* Hiệu ứng hover cho ảnh */
    }
    .product-card:hover .card-img-top {
        transform: scale(1.05); /* Phóng to ảnh khi hover */
    }
    .product-card {
        transition: box-shadow 0.3s ease; /* Hiệu ứng hover cho card */
    }
    .product-card:hover {
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, .15) !important;
    }
</style>

<div class="container py-5">
    <div class="row">
        <div class="col-lg-3">
             <div class="category-sidebar">
                <h4 class="mb-3">Danh mục</h4>
                <div class="list-group">
                    <a asp-action="Index"
                       asp-route-searchString="@currentFilter"
                       asp-route-categoryId="" 
                       class="list-group-item list-group-item-action @(currentCategory == null ? "active" : "")">
                       Tất cả sản phẩm
                    </a>
                    @if (categories != null)
                    {
                        @foreach (var category in categories)
                        {
                            <a asp-action="Index"
                               asp-route-searchString="@currentFilter"
                               asp-route-categoryId="@category.Id"
                               class="list-group-item list-group-item-action @(currentCategory == category.Id ? "active" : "")">
                                @category.Name
                            </a>
                        }
                    }
                </div>
            </div>
        </div>
        <div class="col-lg-9">
            <div class="text-center mb-5">
                 @if (string.IsNullOrEmpty(currentFilter) && !currentCategory.HasValue)
                 {
                     <h1 class="display-5 fw-bold">Tất cả Sản phẩm</h1>
                     <p class="text-muted">Khám phá toàn bộ danh mục sản phẩm đa dạng tại DCBStore.</p>
                 }
                 else
                 {
                     <h1 class="display-5 fw-bold">Kết quả lọc</h1>
                 }
            </div>
            
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <p class="lead">Không tìm thấy sản phẩm nào phù hợp.</p>
                    <a asp-controller="Products" asp-action="Index" class="btn btn-link">Xem tất cả sản phẩm</a>
                </div>
            }
            else
            {
                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-2 row-cols-lg-3 g-4">
                    @foreach (var product in Model)
                    {
                        var imageUrl = product.Images?.FirstOrDefault()?.Url ?? "/images/placeholder.png";
                        <div class="col">
                            <div class="card h-100 border-0 shadow-sm product-card">
                                <div class="product-card-img-container position-relative">
                                    <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id">
                                        <img src="@imageUrl" class="card-img-top" alt="@product.Name">
                                    </a>
                                    @* BẮT ĐẦU PHẦN THÊM MỚI: HIỂN THỊ SỐ LƯỢNG ĐÃ BÁN *@
                                    @if (product.SoldQuantity > 0)
                                    {
                                        <span class="sold-badge">Đã bán: @product.SoldQuantity</span>
                                    }
                                    @* KẾT THÚC PHẦN THÊM MỚI *@
                                    @if (SignInManager.IsSignedIn(User))
                                    {
                                        <button class="btn toggle-wishlist-btn position-absolute top-0 end-0 m-2" data-product-id="@product.Id" title="Thêm vào yêu thích">
                                            <i class="far fa-heart"></i>
                                        </button>
                                    }
                                </div>
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title h6">
                                        <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id" class="text-dark text-decoration-none stretched-link">@product.Name</a>
                                    </h5>
                                    <p class="card-text small text-muted flex-grow-1">@Html.Raw(product.Description)</p>
                                    <div class="d-flex justify-content-between align-items-center mt-3">
                                        <p class="card-text fw-bold text-primary mb-0">
                                            @product.Price.ToString("N0") VNĐ
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <nav aria-label="Product navigation" class="mt-5 d-flex justify-content-center">
                    <ul class="pagination">
                        <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                            <a class="page-link" asp-action="Index" asp-route-pageNumber="@(currentPage - 1)" asp-route-searchString="@currentFilter" asp-route-categoryId="@currentCategory">
                                <span>«</span>
                            </a>
                        </li>
                        @for (int i = 1; i <= totalPages; i++)
                        {
                            <li class="page-item @(i == currentPage ? "active" : "")">
                                <a class="page-link" asp-action="Index" asp-route-pageNumber="@i" asp-route-searchString="@currentFilter" asp-route-categoryId="@currentCategory">@i</a>
                            </li>
                        }
                        <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                            <a class="page-link" asp-action="Index" asp-route-pageNumber="@(currentPage + 1)" asp-route-searchString="@currentFilter" asp-route-categoryId="@currentCategory">
                                <span>»</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>