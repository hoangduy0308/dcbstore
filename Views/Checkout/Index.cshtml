@model DCBStore.Models.Order
@{
    ViewData["Title"] = "Thông tin thanh toán";
}

<h1>Thông tin giao hàng</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="ProcessOrder" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="ShippingAddress" class="control-label">Địa chỉ nhận hàng</label>
                <input asp-for="ShippingAddress" class="form-control" />
                <span asp-validation-for="ShippingAddress" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="PhoneNumber" class="control-label">Số điện thoại</label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Hoàn tất Đơn hàng" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}