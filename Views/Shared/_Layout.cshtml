@using Microsoft.AspNetCore.Identity
@using DCBStore.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DCBStore</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
          integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f8f9fa;
        }
        .navbar-brand {
            font-weight: 700;
            letter-spacing: .5px;
        }
        .nav-link {
            font-weight: 500;
        }
        .main-container {
            min-height: 70vh;
        }
        .footer-custom {
            background: linear-gradient(to right, #007bff, #00c6ff);
        }
        .footer-link {
            color: #e9ecef;
            text-decoration: none;
            transition: color 0.2s;
        }
        .footer-link:hover {
            color: #ffd700;
        }
        .footer-icon {
            font-size: 1.25rem;
            color: white;
            transition: color 0.3s;
        }
        .footer-icon:hover {
            color: #ffd700;
        }
        .dropdown-menu {
            border-radius: 0.75rem;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, .15) !important;
        }
        .nav-search {
            position: relative;
            min-width: 300px;
        }
        #search-suggestions {
            position: absolute;
            top: 100%;
            left: 0;
            right: 0;
            z-index: 1050;
            background-color: white;
            border: 1px solid #dee2e6;
            border-top: none;
            border-radius: 0 0 0.75rem 0.75rem;
            box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15);
            max-height: 400px;
            overflow-y: auto;
        }
        .suggestion-item {
            display: flex;
            align-items: center;
            padding: 0.75rem 1rem;
            color: #212529;
            text-decoration: none;
            border-bottom: 1px solid #f0f0f0;
        }
        .suggestion-item:last-child {
            border-bottom: none;
        }
        .suggestion-item:hover {
            background-color: #f8f9fa;
        }
        .suggestion-item img {
            width: 40px;
            height: 40px;
            object-fit: contain;
            margin-right: 1rem;
            border-radius: 0.25rem;
        }
        .hero-section {
            background: linear-gradient(to right, #007bff, #00c6ff);
            color: white;
            border-bottom-left-radius: 50px;
            border-bottom-right-radius: 50px;
            overflow: hidden;
        }
        .hero-title {
            font-size: 3rem;
            font-weight: 800;
        }
        .hero-subtitle {
            font-size: 1.2rem;
            opacity: 0.95;
            max-width: 600px;
        }
        .hero-image {
            max-height: 300px;
            animation: float 4s ease-in-out infinite;
        }
        @@keyframes float {
            0%,
            100% {
                transform: translateY(0px);
            }
            50% {
                transform: translateY(-10px);
            }
        }
        .chat-widget-button {
            position: fixed;
            bottom: 25px;
            right: 25px;
            width: 60px;
            height: 60px;
            border-radius: 50%;
            background-color: var(--bs-primary);
            color: white;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 2rem;
            cursor: pointer;
            box-shadow: 0 4px 8px rgba(0,0,0,0.2);
            transition: transform 0.2s;
            z-index: 999;
        }
        .chat-widget-button:hover {
            transform: scale(1.1);
        }
        .chat-window {
            position: fixed;
            bottom: 100px;
            right: 25px;
            width: 350px;
            max-width: 90%;
            height: 500px;
            background-color: white;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.3);
            display: flex;
            flex-direction: column;
            overflow: hidden;
            transform: scale(0.95) translateY(10px);
            opacity: 0;
            visibility: hidden;
            transition: all 0.3s ease-in-out;
            z-index: 1000;
        }
        .chat-window.show {
            transform: scale(1) translateY(0);
            opacity: 1;
            visibility: visible;
        }
        .chat-header {
            background-color: var(--bs-primary);
            color: white;
            padding: 1rem;
            font-weight: bold;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .chat-header .btn-close {
            filter: brightness(0) invert(1);
        }
        .chat-body {
            flex-grow: 1;
            padding: 1rem;
            overflow-y: auto;
            background-color: #f4f7f9;
        }
        .chat-footer {
            padding: 0.75rem;
            background-color: #fff;
            border-top: 1px solid #dee2e6;
        }
        .toggle-wishlist-btn {
            background: none;
            border: none;
            color: #adb5bd;
            cursor: pointer;
            font-size: 1.5rem;
            padding: 0;
            line-height: 1;
            transition: color 0.2s, transform 0.2s;
        }
        .toggle-wishlist-btn:hover {
            color: #dc3545;
            transform: scale(1.2);
        }
        .toggle-wishlist-btn.liked {
            color: #dc3545;
        }
        .toast-container {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 1090;
        }
        .toast {
            min-width: 300px;
            box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15);
            border: none;
        }

        .navbar .dropdown .dropdown-menu {
            display: block; 
            opacity: 0;
            visibility: hidden;
            transform: translateY(10px); 
            transition: all 0.3s ease;
            pointer-events: none;
            margin-top: 0;
        }

        .navbar .dropdown:hover > .dropdown-menu {
            opacity: 1;
            visibility: visible;
            transform: translateY(0);
            pointer-events: auto;
        }

        .category-dropdown-menu {
            min-width: 450px;
            padding: 1rem;
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 0.25rem 1rem;
        }

        .category-dropdown-menu .dropdown-item {
            font-weight: 500;
            color: #343a40;
            padding: 0.6rem 1rem;
            border-radius: 0.5rem;
            transition: background-color 0.2s, color 0.2s;
        }

        .category-dropdown-menu .dropdown-item:hover {
            background-color: #eef5ff;
            color: #0d6efd;
        }

        .category-dropdown-menu .dropdown-divider {
            grid-column: 1 / -1;
            margin: 0.75rem 0;
        }

    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-white shadow-sm sticky-top py-3">
            <div class="container">
                <a class="navbar-brand fw-bold fs-4 text-primary" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-store"></i> DCBStore
                </a>
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto align-items-center">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle fw-semibold" asp-area="" asp-controller="Products" asp-action="Index" role="button" aria-expanded="false">
                                Danh mục
                            </a>
                            <ul class="dropdown-menu category-dropdown-menu" aria-labelledby="navbarDropdownCategories">
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Products" asp-action="Index">Tất cả sản phẩm</a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                @await Component.InvokeAsync("Categories")
                            </ul>
                        </li>

                        <li class="nav-item mx-lg-3">
                            <form asp-area="" asp-controller="Products" asp-action="Index" method="get" class="d-flex nav-search" role="search">
                                <input id="main-search-input" class="form-control me-2 rounded-pill shadow-sm px-3" type="search" name="SearchString"
                                       placeholder="Tìm kiếm sản phẩm..." aria-label="Search" value="@ViewData["CurrentFilter"]" autocomplete="off">
                                <button class="btn btn-outline-primary rounded-pill px-3" type="submit" style="display: none;">
                                    <i class="fas fa-search"></i>
                                </button>
                                <div id="search-suggestions" class="d-none"></div>
                            </form>
                        </li>
                        
                        <li class="nav-item">
                            <div class="d-flex align-items-center gap-4">
                                <a asp-area="" asp-controller="Cart" asp-action="Index" class="position-relative text-decoration-none"
                                   title="Giỏ hàng">
                                    <i class="fas fa-shopping-cart fs-5 text-dark"></i>
                                    <span class="badge bg-danger rounded-circle position-absolute" id="cart-item-count"
                                          style="top: -5px; right: -10px; font-size: 0.65rem; min-width: 18px; height: 18px; line-height: 1.3;">
                                        0
                                    </span>
                                </a>
                                <div class="dropdown">
                                    <a href="#" class="d-flex align-items-center text-decoration-none text-dark dropdown-toggle"
                                       id="accountDropdown" role="button" aria-expanded="false"
                                       title="Tài khoản">
                                        <i class="fas fa-user-circle fs-4"></i>
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end shadow rounded-3 p-2"
                                        aria-labelledby="accountDropdown" style="min-width: 200px;">
                                        <partial name="_LoginPartial" />
                                    </ul>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    @if (ViewContext.RouteData.Values["controller"]?.ToString() == "Home" &&
         ViewContext.RouteData.Values["action"]?.ToString() == "Index" &&
         string.IsNullOrEmpty(ViewData["CurrentFilter"] as string))
    {
        <section class="hero-section">
            <div class="container py-5">
                <div class="row align-items-center">
                    <div class="col-md-6 text-white text-center text-md-start">
                        <h1 class="hero-title">Chào mừng đến với <span class="text-warning">DCBStore</span></h1>
                        <p class="hero-subtitle mt-3">Khám phá thế giới mua sắm hiện đại với hàng ngàn sản phẩm chất lượng, giá cả hợp lý và giao hàng nhanh chóng.</p>
                        <a href="@Url.Action("Index", "Products")" class="btn btn-warning btn-lg mt-4 shadow">
                            <i class="fas fa-shopping-bag me-2"></i> Bắt đầu mua sắm
                        </a>
                    </div>
                    <div class="col-md-6 text-center mt-4 mt-md-0">
                        <img src="https://cdn-icons-png.flaticon.com/512/891/891462.png" alt="Shopping" class="hero-image img-fluid" />
                    </div>
                </div>
            </div>
        </section>
    }

    <div class="container main-container mt-5">
        <main role="main" class="pb-5">
            @RenderBody()
        </main>
    </div>

    @if (SignInManager.IsSignedIn(User))
    {
        <input type="hidden" id="current-user-id" value="@UserManager.GetUserId(User)" />
        <div id="chat-toggle-button" class="chat-widget-button">
            <i class="fas fa-comment-dots"></i>
        </div>
        <div id="chat-window" class="chat-window">
            <div class="chat-header">
                <span>Hỗ trợ trực tuyến</span>
                <button type="button" class="btn-close" id="chat-close-button"></button>
            </div>
            <div id="chat-messages-list" class="chat-body">
                <div class="text-center text-muted p-3">Bắt đầu trò chuyện với chúng tôi!</div>
            </div>
            <div class="chat-footer">
                <form id="chat-form" class="d-flex">
                    <input type="text" id="chat-message-input" class="form-control" placeholder="Nhập tin nhắn..." autocomplete="off">
                    <button type="submit" class="btn btn-primary ms-2"><i class="fas fa-paper-plane"></i></button>
                </form>
            </div>
        </div>
    }
    
    <footer class="footer-custom text-white pt-5 pb-4">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-4">
                    <h4 class="fw-bold text-warning">DCBStore</h4>
                    <p class="text-light">Nền tảng thương mại điện tử uy tín, mang đến trải nghiệm mua sắm tuyệt vời cho mọi nhà.</p>
                </div>
                <div class="col-md-2 mb-4">
                    <h6 class="text-uppercase fw-bold text-warning mb-3">Sản phẩm</h6>
                    <ul class="list-unstyled">
                        <li><a href="#" class="footer-link">Sản phẩm mới</a></li>
                        <li><a href="#" class="footer-link">Khuyến mãi</a></li>
                        <li><a href="#" class="footer-link">Bán chạy</a></li>
                    </ul>
                </div>
                <div class="col-md-3 mb-4">
                    <h6 class="text-uppercase fw-bold text-warning mb-3">Hỗ trợ</h6>
                    <ul class="list-unstyled">
                        <li><a href="#" class="footer-link">Trung tâm trợ giúp</a></li>
                        <li><a href="#" class="footer-link">Chính sách đổi trả</a></li>
                        <li><a href="#" class="footer-link">Hướng dẫn mua hàng</a></li>
                    </ul>
                </div>
                <div class="col-md-3 mb-4">
                    <h6 class="text-uppercase fw-bold text-warning mb-3">Kết nối</h6>
                    <div class="d-flex gap-3">
                        <a href="#" class="footer-icon"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="footer-icon"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="footer-icon"><i class="fab fa-youtube"></i></a>
                    </div>
                </div>
            </div>
            <hr class="border-light">
            <p class="text-center text-light mb-0">
                &copy; @DateTime.Now.Year - <span class="text-warning fw-semibold">DCBStore</span>. All rights reserved.
            </p>
        </div>
    </footer>

    <div class="toast-container position-fixed top-0 end-0 p-3">
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/signalr.min.js"></script>
    <script src="~/js/chat.js" asp-append-version="true"></script>
    <script src="~/js/wishlist.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <script>
        $(document).ready(function() {
            let debounceTimer;
            const searchInput = $('#main-search-input');
            const suggestionsContainer = $('#search-suggestions');

            searchInput.on('keyup', function() {
                clearTimeout(debounceTimer);
                const searchTerm = $(this).val();

                if (searchTerm.length < 2) {
                    suggestionsContainer.addClass('d-none').html('');
                    return;
                }

                debounceTimer = setTimeout(function() {
                    $.ajax({
                        url: '@Url.Action("SearchSuggestions", "Products")',
                        type: 'GET',
                        data: { term: searchTerm },
                        success: function(data) {
                            suggestionsContainer.html('').removeClass('d-none');
                            
                            const suggestions = data.$values;

                            if (suggestions && suggestions.length > 0) {
                                $.each(suggestions, function(i, item) {
                                    const suggestionHtml = `
                                        <a href="/Products/Details/${item.id}" class="suggestion-item">
                                            <img src="${item.imageUrl}" alt="${item.name}">
                                            <span>${item.name}</span>
                                        </a>
                                    `;
                                    suggestionsContainer.append(suggestionHtml);
                                });
                            } else {
                                suggestionsContainer.html('<div class="p-3 text-muted">Không tìm thấy gợi ý nào.</div>');
                            }
                        },
                        error: function() {
                            suggestionsContainer.addClass('d-none').html('');
                        }
                    });
                }, 1000); 
            });

            $(document).on('click', function(e) {
                if (!$(e.target).closest('.nav-search').length) {
                    suggestionsContainer.addClass('d-none').html('');
                }
            });
            
            const chatWindow = document.getElementById('chat-window');
            const toggleButton = document.getElementById('chat-toggle-button');
            const closeButton = document.getElementById('chat-close-button');

            if (toggleButton) {
                toggleButton.addEventListener('click', function () {
                    chatWindow.classList.toggle('show');
                });
            }
            
            if (closeButton) {
                closeButton.addEventListener('click', function () {
                    chatWindow.classList.remove('show');
                });
            }
        });
    </script>
</body>
</html>