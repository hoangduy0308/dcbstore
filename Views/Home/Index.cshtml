@model DCBStore.Models.ViewModels.HomeViewModel

@{
    ViewData["Title"] = "Trang Chủ";
}

<style>
    /* CSS cho Trust Badges */
    .trust-badge-section {
        padding-top: 1rem;
        padding-bottom: 3rem;
        border-bottom: 1px solid #dee2e6;
    }
    .trust-badge {
        display: flex;
        align-items: center;
        gap: 15px;
    }
    .trust-badge i {
        font-size: 2rem;
        color: var(--bs-primary);
    }
    .trust-badge-text h6 {
        margin-bottom: 0;
        font-weight: 600;
    }
    .trust-badge-text p {
        margin-bottom: 0;
        font-size: 0.9rem;
        color: #6c757d;
    }

    /* CSS chung cho các khu vực sản phẩm */
    .product-section {
        padding: 4rem 0;
    }
    .section-title {
        text-align: center;
        margin-bottom: 3rem;
    }
    .section-title h2 {
        font-weight: 700;
    }
</style>


<div class="trust-badge-section">
    <div class="container">
        <div class="row g-4">
            <div class="col-md-3 col-6">
                <div class="trust-badge">
                    <i class="fas fa-truck-fast"></i>
                    <div class="trust-badge-text">
                        <h6>Giao hàng siêu tốc</h6>
                        <p>Trong vòng 24h</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="trust-badge">
                    <i class="fas fa-shield-alt"></i>
                    <div class="trust-badge-text">
                        <h6>Bảo hành chính hãng</h6>
                        <p>Yên tâm sử dụng</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="trust-badge">
                    <i class="fas fa-headset"></i>
                    <div class="trust-badge-text">
                        <h6>Hỗ trợ 24/7</h6>
                        <p>Giải đáp mọi thắc mắc</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="trust-badge">
                    <i class="fas fa-undo-alt"></i>
                    <div class="trust-badge-text">
                        <h6>Đổi trả dễ dàng</h6>
                        <p>Trong vòng 7 ngày</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="product-section">
    <div class="container">
        <div class="section-title">
            <h2 class="display-6">Sản phẩm Bán chạy</h2>
            <p class="text-muted">Khám phá những sản phẩm được yêu thích nhất tại DCBStore</p>
        </div>

        @if (Model.FeaturedProducts != null && Model.FeaturedProducts.Any())
        {
            <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-4 g-4">
                @foreach (var product in Model.FeaturedProducts)
                {
                    <partial name="_ProductCard" model="product" />
                }
            </div>
        }
        else
        {
            <p class="text-center">Chưa có sản phẩm nào.</p>
        }
    </div>
</div>

<div class="product-section bg-light">
    <div class="container">
        <div class="section-title">
            <h2 class="display-6">Hàng Mới Về</h2>
            <p class="text-muted">Những sản phẩm công nghệ mới nhất vừa cập bến</p>
        </div>

        @if (Model.NewArrivals != null && Model.NewArrivals.Any())
        {
            <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-4 g-4">
                 @foreach (var product in Model.NewArrivals)
                {
                    <partial name="_ProductCard" model="product" />
                }
            </div>
             <div class="text-center mt-5">
                <a asp-controller="Products" asp-action="Index" class="btn btn-outline-primary px-4">Xem tất cả sản phẩm</a>
            </div>
        }
        else
        {
            <p class="text-center">Chưa có sản phẩm nào.</p>
        }
    </div>
</div>