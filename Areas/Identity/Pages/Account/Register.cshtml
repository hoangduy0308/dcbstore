@page
@model RegisterModel

@{
    ViewData["Title"] = "Đăng ký tài khoản";
}

<style>
    .auth-container {
        min-height: 80vh;
        background: linear-gradient(-45deg, #007bff, #343a40, #00d2ff, #343a40);
        background-size: 400% 400%;
        animation: gradientBG 15s ease infinite;
    }

    .auth-card {
        background-color: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: 1rem;
        border: none;
        box-shadow: 0 1rem 3rem rgba(0,0,0,.175)!important;
    }
    
    .auth-card .form-control {
        border-radius: 0.5rem;
        padding: 1rem;
    }
    
    .auth-card .btn-primary {
        padding: 0.75rem;
        font-weight: 600;
        border-radius: 0.5rem;
    }

    @@keyframes gradientBG {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
    }
</style>

<div class="auth-container d-flex align-items-center justify-content-center py-5">
    <div class="col-lg-5 col-md-8 col-sm-11">
        <div class="card auth-card p-4">
            <div class="card-body">
                <div class="text-center mb-5">
                    <h1 class="h2 fw-bold">Tạo tài khoản mới</h1>
                    <p class="text-muted">Bắt đầu hành trình mua sắm của bạn tại DCBStore.</p>
                </div>
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger small mb-3" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email"></label>
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password"></label>
                        <span asp-validation-for="Input.Password" class="text-danger small"></span>
                    </div>
                    <div class="form-floating mb-4">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.ConfirmPassword"></label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                    </div>
                    <button id="registerSubmit" type="submit" class="w-100 btn btn-primary">Đăng ký</button>
                    <div class="text-center mt-4">
                        <p class="small text-muted">
                            Đã có tài khoản? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="fw-bold text-decoration-none">Đăng nhập</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
