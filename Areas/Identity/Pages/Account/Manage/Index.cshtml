@page
@model IndexModel
@{
    ViewData["Title"] = "Hồ Sơ Của Tôi";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="account-content-wrapper">
    <div class="account-content-header">
        <h4>@ViewData["Title"]</h4>
        <p>Quản lý thông tin hồ sơ để bảo mật tài khoản</p>
    </div>

    <hr class="account-content-divider">

    <partial name="_StatusMessage" for="StatusMessage" />

    <form id="profile-form" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-8">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                <div class="row mb-3 align-items-center form-group">
                    <label class="col-sm-3 col-form-label text-sm-end">Tên đăng nhập</label>
                    <div class="col-sm-9">
                        <input asp-for="Username" class="form-control-plaintext" readonly />
                    </div>
                </div>

                <div class="row mb-3 align-items-center form-group">
                    <label asp-for="Input.FullName" class="col-sm-3 col-form-label text-sm-end">Tên</label>
                    <div class="col-sm-9">
                        <input asp-for="Input.FullName" class="form-control" />
                        <span asp-validation-for="Input.FullName" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3 align-items-center form-group">
                    <label asp-for="Input.PhoneNumber" class="col-sm-3 col-form-label text-sm-end">Số điện thoại</label>
                    <div class="col-sm-9">
                        <input asp-for="Input.PhoneNumber" class="form-control" />
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-9 offset-sm-3">
                        <button id="update-profile-button" type="submit" class="btn btn-primary btn-shopee">Lưu</button>
                    </div>
                </div>
            </div>

            <div class="col-md-4 d-flex justify-content-center">
                <div class="avatar-upload-container text-center">
                    <img id="profilePicture" class="rounded-circle mb-3" src="@(Model.AvatarUrl ?? "https://via.placeholder.com/120")" alt="Profile picture">
                    <input type="file" name="AvatarFile" id="avatarFile" class="d-none" accept=".jpg,.jpeg,.png">
                    <label for="avatarFile" class="btn btn-outline-secondary">Chọn Ảnh</label>
                    <div class="form-text mt-2">
                        Dung lượng file tối đa 1 MB<br>
                        Định dạng: .JPEG, .PNG
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.getElementById('avatarFile').onchange = function (evt) {
            var reader = new FileReader();
            reader.onload = function (e) {
                document.getElementById('profilePicture').src = e.target.result;
            };
            reader.readAsDataURL(this.files[0]);
        };
    </script>
}