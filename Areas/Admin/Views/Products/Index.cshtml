@model IEnumerable<DCBStore.Models.Product>

@{
    ViewData["Title"] = "Quản lý Sản phẩm";
}

<h1>@ViewData["Title"]</h1>

<p>
    <form asp-action="Create" method="get" style="display: inline;">
        <button type="submit" class="btn btn-primary">Thêm sản phẩm mới</button>
    </form>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Tên sản phẩm</th>
            <th>Giá</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @item.Price.ToString("N0") VNĐ
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Sửa</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Chi tiết</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>0