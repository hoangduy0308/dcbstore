@model IEnumerable<DCBStore.Models.Product>

@{
    ViewData["Title"] = "Quản lý Sản phẩm";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-success">
        <i class="fas fa-plus me-2"></i>Tạo sản phẩm mới
    </a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Tên sản phẩm</th>
            <th>Danh mục</th>
            <th class="text-end">Giá</th>
            <th class="text-center">Tồn kho</th>
            <th class="text-center">Số lượng ảnh</th>
            <th style="width: 200px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Category.Name)</td>
                <td class="text-end">@item.Price.ToString("N0") đ</td>
                <td class="text-center">@item.Stock</td>
                <td class="text-center">@item.Images.Count()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm" title="Sửa">
                        <i class="fas fa-edit"></i>
                    </a>
                     <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm" title="Chi tiết">
                        <i class="fas fa-eye"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" title="Xóa">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>