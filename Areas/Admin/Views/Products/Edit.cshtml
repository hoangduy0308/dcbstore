@model DCBStore.Models.Product

@{
    ViewData["Title"] = "Quản lý Sản phẩm và Biến thể";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="mb-0">@ViewData["Title"]</h3>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-2"></i>Quay lại Danh sách
    </a>
</div>


<div class="row">
    <!-- Cột trái: Thông tin sản phẩm chung -->
    <div class="col-md-5">
        <div class="card">
            <div class="card-header">
                <h5>Thông tin chung</h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit" asp-route-id="@Model.Id">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="CategoryId" class="form-label"></label>
                        <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId"></select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Lưu thông tin chung</button>
                </form>
            </div>
        </div>
    </div>

    <!-- Cột phải: Quản lý các biến thể -->
    <div class="col-md-7">
        <div class="card">
            <div class="card-header">
                <h5>Các biến thể của sản phẩm</h5>
            </div>
            <div class="card-body">
                @if (Model.Variants.Any())
                {
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Thuộc tính</th>
                                <th>Giá</th>
                                <th>Tồn kho</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var variant in Model.Variants)
                            {
                                <tr>
                                    <td>
                                        @if(!string.IsNullOrEmpty(variant.Color)) { <span>Màu: @variant.Color</span><br/> }
                                        @if(!string.IsNullOrEmpty(variant.Size)) { <span>Size: @variant.Size</span><br/> }
                                        @if(!string.IsNullOrEmpty(variant.Storage)) { <span>Lưu trữ: @variant.Storage</span> }
                                    </td>
                                    <td>@variant.Price.ToString("N0")</td>
                                    <td>@variant.Stock</td>
                                    <td>
                                        @* Chức năng sửa/xóa biến thể sẽ được thêm sau *@
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-muted">Sản phẩm này chưa có biến thể nào.</p>
                }
                
                <hr/>
                
                @* Chúng ta sẽ thêm form tạo biến thể mới ở đây trong các bước sau *@
                <p class="text-center">
                    <a href="#" class="btn btn-success">Thêm biến thể mới</a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}