@model DCBStore.Models.Product

@{
    ViewData["Title"] = "Chỉnh sửa Sản phẩm";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="mb-0"><i class="fas fa-pencil-alt me-2"></i>@ViewData["Title"]</h3>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-2"></i>Quay lại Danh sách
    </a>
</div>

<form asp-action="Edit" method="post">
    <div class="row">
        <div class="col-md-8">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Id" />

            <div class="row mb-3">
                <label asp-for="Name" class="col-sm-3 col-form-label">Tên sản phẩm</label>
                <div class="col-sm-9">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="Description" class="col-sm-3 col-form-label">Mô tả</label>
                <div class="col-sm-9">
                    <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="Price" class="col-sm-3 col-form-label">Giá</label>
                <div class="col-sm-9">
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="ImageUrl" class="col-sm-3 col-form-label">Đường dẫn hình ảnh</label>
                <div class="col-sm-9">
                    <input asp-for="ImageUrl" class="form-control" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-9 offset-sm-3">
                    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <h6>Ảnh hiện tại</h6>
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="Ảnh sản phẩm" class="img-fluid rounded border p-2" />
            }
            else
            {
                <div class="d-flex align-items-center justify-content-center bg-light rounded border" style="height: 200px;">
                    <span>Không có ảnh</span>
                </div>
            }
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}