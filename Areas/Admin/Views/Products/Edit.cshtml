@model DCBStore.Models.Product

@{
    ViewData["Title"] = "Chỉnh sửa sản phẩm";
}

<h1>@ViewData["Title"]: @Model.Name</h1>
<hr />

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">Thông tin chi tiết</div>
                <div class="card-body">
                    <div class="form-group mb-3">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Price" class="control-label"></label>
                                <input asp-for="Price" class="form-control" type="number" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Stock" class="control-label"></label>
                                <input asp-for="Stock" class="form-control" type="number" />
                                <span asp-validation-for="Stock" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="CategoryId" class="control-label"></label>
                        <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId"></select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">Quản lý hình ảnh</div>
                <div class="card-body">
                    <div class="form-group mb-3">
                        <label class="control-label">Thêm ảnh mới</label>
                        @* Đặt tên là "newImageFiles" để khớp với tham số trong Controller *@
                        <input type="file" name="newImageFiles" class="form-control" multiple />
                    </div>
                    <hr/>
                    <label>Các ảnh hiện tại</label>
                    <div id="image-container" class="mt-2 d-flex flex-wrap">
                        @if (Model.Images != null && Model.Images.Any())
                        {
                            foreach (var image in Model.Images)
                            {
                                <div class="position-relative me-2 mb-2" id="image-@image.Id">
                                    <img src="@image.Url" alt="Product Image" style="width: 100px; height: 100px; object-fit: cover; border-radius: 5px;" />
                                    <button type="button" class="btn btn-danger btn-sm position-absolute top-0 end-0 delete-image-btn" data-id="@image.Id" style="line-height: 1; padding: 0.2rem 0.4rem;">
                                        &times;
                                    </button>
                                </div>
                            }
                        }
                        else
                        {
                            <p class="text-muted">Chưa có ảnh nào.</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="form-group mt-4">
        <input type="submit" value="Lưu thay đổi" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            $('.delete-image-btn').on('click', function (e) {
                e.preventDefault();
                var btn = $(this);
                var imageId = btn.data('id');

                if (confirm('Bạn có chắc chắn muốn xóa ảnh này?')) {
                    $.ajax({
                        url: '@Url.Action("DeleteImage", "Products")',
                        type: 'POST',
                        data: { id: imageId },
                        // Thêm token để chống giả mạo request
                        headers: {
                           "RequestVerificationToken": $('input[name="__RequestVerificationToken"]').val()
                        },
                        success: function (result) {
                            if (result.success) {
                                // Xóa div chứa ảnh khỏi giao diện
                                $('#image-' + imageId).remove();
                                alert(result.message);
                            } else {
                                alert('Lỗi: ' + result.message);
                            }
                        },
                        error: function () {
                            alert('Đã xảy ra lỗi không xác định. Vui lòng thử lại.');
                        }
                    });
                }
            });
        });
    </script>
}