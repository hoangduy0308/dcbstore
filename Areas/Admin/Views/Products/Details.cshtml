@model DCBStore.Models.Product

@{
    ViewData["Title"] = "Chi tiết Sản phẩm";
}

<h1 class="h3 mb-3">@ViewData["Title"]</h1>

<div>
    <h4>Sản phẩm: @Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Tên sản phẩm
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Mô tả
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Giá
        </dt>
        <dd class = "col-sm-10">
            @Model.Price.ToString("N0") VNĐ
        </dd>
        <dt class = "col-sm-2">
            Hình ảnh
        </dt>
        <dd class = "col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="Hình ảnh sản phẩm" style="max-width: 200px; border-radius: 5px;" />
            }
            else
            {
                <span>Không có hình ảnh</span>
            }
        </dd>
    </dl>
</div>
<div class="d-flex gap-2 mt-4">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Chỉnh sửa</a> 
    <a asp-action="Index" class="btn btn-secondary">Quay lại Danh sách</a>
</div>
