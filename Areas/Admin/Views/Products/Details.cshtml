@model DCBStore.Models.Product

@{
    ViewData["Title"] = "Chi tiết Sản phẩm";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="mb-0"><i class="fas fa-eye me-2"></i>Chi tiết: @Model.Name</h3>
    <div class="d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
            <i class="fas fa-pencil-alt me-2"></i>Quản lý Sản phẩm
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Quay lại Danh sách
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-5">
        <div class="card shadow-sm">
            <div class="card-header">
                <h5 class="mb-0">Thông tin chung</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Mã sản phẩm</dt>
                    <dd class="col-sm-8">#@Model.Id</dd>

                    <dt class="col-sm-4">Tên sản phẩm</dt>
                    <dd class="col-sm-8">@Model.Name</dd>
                    
                    <dt class="col-sm-4">Danh mục</dt>
                    <dd class="col-sm-8">@Model.Category.Name</dd>

                    <dt class="col-sm-4">Giá bán</dt>
                    <dd class="col-sm-8 fw-bold text-danger">@Model.Price.ToString("N0") đ</dd>

                    <dt class="col-sm-4">Tồn kho</dt>
                    <dd class="col-sm-8">@Model.Stock</dd>

                    <dt class="col-sm-12 mt-3">Mô tả</dt>
                    <dd class="col-sm-12">@Model.Description</dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="col-md-7">
        <div class="card shadow-sm">
            <div class="card-header">
                <h5 class="mb-0">Hình ảnh sản phẩm</h5>
            </div>
            <div class="card-body">
                @if (Model.Images != null && Model.Images.Any())
                {
                    <div class="d-flex flex-wrap gap-3">
                        @foreach (var image in Model.Images)
                        {
                            <img src="@image.Url" style="width: 150px; height: 150px; object-fit: cover;" class="rounded border" />
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted text-center p-3">Sản phẩm này chưa có hình ảnh nào.</p>
                }
            </div>
        </div>
    </div>
</div>