@model DCBStore.Models.Product

@{
    ViewData["Title"] = "Chi tiết Sản phẩm";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="mb-0"><i class="fas fa-eye me-2"></i>@ViewData["Title"]</h3>
    <div class="d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
            <i class="fas fa-pencil-alt me-2"></i>Chỉnh sửa
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Quay lại Danh sách
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-5">
        <div class="card shadow-sm">
            <div class="card-body">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded" />
                }
                else
                {
                    <div class="d-flex align-items-center justify-content-center bg-light rounded" style="height: 300px;">
                        <span>Không có hình ảnh</span>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="col-md-7">
        <h2 class="fw-bold">@Model.Name</h2>
        <p class="text-muted lead">@Model.Description</p>
        <hr>
        <div class="fs-3 fw-bold text-primary mb-4">
            @Model.Price.ToString("N0") đ
        </div>
        
        <dl class="row">
            <dt class="col-sm-3">Mã sản phẩm</dt>
            <dd class="col-sm-9">#@Model.Id</dd>

            <dt class="col-sm-3">Tên sản phẩm</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Giá bán</dt>
            <dd class="col-sm-9">@Model.Price.ToString("N0") đ</dd>
        </dl>
    </div>
</div>