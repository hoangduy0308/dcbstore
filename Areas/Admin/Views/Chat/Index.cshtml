@using Microsoft.AspNetCore.Identity
@using DCBStore.Data
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Trung tâm Hỗ trợ Trực tuyến";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Các cuộc trò chuyện</h5>
            </div>
            <ul id="user-list" class="list-group list-group-flush" style="height: 60vh; overflow-y: auto;">
                <li class="list-group-item text-muted text-center" id="no-users-message">Chưa có ai đang hoạt động.</li>
            </ul>
        </div>
    </div>

    <div class="col-md-8">
        <div class="card" id="chat-panel" style="display: none;">
            <div class="card-header">
                <h5 class="mb-0">Trò chuyện với <span id="chat-with-username"></span></h5>
            </div>
            <div id="admin-chat-messages" class="card-body" style="height: 50vh; overflow-y: auto;">
                </div>
            <div class="card-footer">
                <form id="admin-chat-form" class="d-flex">
                    <input type="hidden" id="target-user-id" />
                    @* BẮT ĐẦU THÊM MỚI: Thêm input ẩn để lưu User ID của Admin hiện tại *@
                    <input type="hidden" id="current-admin-id" value="@UserManager.GetUserId(User)" />
                    @* KẾT THÚC THÊM MỚI *@
                    <input type="text" id="admin-message-input" class="form-control" placeholder="Nhập tin nhắn trả lời..." autocomplete="off" />
                    <button type="submit" class="btn btn-primary ms-2"><i class="fas fa-paper-plane"></i> Gửi</button>
                </form>
            </div>
        </div>
        <div class="card align-items-center justify-content-center" id="select-chat-prompt" style="height: 67vh;">
             <div class="text-center text-muted">
                <i class="fas fa-comments fa-3x mb-3"></i>
                <p>Vui lòng chọn một cuộc trò chuyện để bắt đầu.</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/admin-chat.js" asp-append-version="true"></script>
}