@model DCBStore.Models.Order
@using DCBStore.Models 
@{
    ViewData["Title"] = "Chi tiết Đơn hàng #" + Model.Id;
}

<h3 class="mb-4">@ViewData["Title"]</h3>

@if (TempData["StatusMessage"] != null)
{
    <div class="alert alert-success">@TempData["StatusMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<div class="row">
    <div class="col-md-8">
        <div class="card shadow-sm mb-4">
            <div class="card-header">
                <h5>Thông tin Khách hàng</h5>
            </div>
            <div class="card-body">
                <p><strong>Tài khoản:</strong> @(Model.User?.Email ?? "Khách vãng lai")</p>
                <p><strong>Tên người nhận:</strong> @Model.CustomerName</p>
                <p><strong>Địa chỉ giao hàng:</strong> @Model.ShippingAddress</p>
                <p><strong>Số điện thoại:</strong> @Model.PhoneNumber</p>
                <p><strong>Ghi chú:</strong> @(string.IsNullOrEmpty(Model.Notes) ? "Không có" : Model.Notes)</p>
            </div>
        </div>
        <div class="card shadow-sm">
            <div class="card-header">
                <h5>Chi tiết Sản phẩm</h5>
            </div>
            <div class="card-body p-0">
                <table class="table mb-0">
                    <thead>
                        <tr>
                            <th style="width: 60%;">Sản phẩm</th>
                            <th class="text-center">Số lượng</th>
                            <th class="text-end">Đơn giá</th>
                            <th class="text-end">Thành tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderDetails)
                        {
                            var imageUrl = item.Product?.Images?.FirstOrDefault()?.Url ?? "/images/placeholder.png";
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="@imageUrl" style="width: 50px; height: 50px; object-fit: cover;" class="rounded me-3" />
                                        <strong>@(item.Product?.Name ?? "[Sản phẩm đã bị xóa]")</strong>
                                    </div>
                                </td>
                                <td class="text-center align-middle">@item.Quantity</td>
                                <td class="text-end align-middle">@item.Price.ToString("N0")</td>
                                <td class="text-end align-middle">@((item.Quantity * item.Price).ToString("N0"))</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th colspan="3" class="text-end border-0">Tổng cộng:</th>
                            <th class="text-end border-0">@Model.Total.ToString("N0") đ</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-header">
                <h5>Cập nhật Trạng thái</h5>
            </div>
            <div class="card-body">
                <form asp-action="UpdateStatus" method="post">
                    <input type="hidden" name="orderId" value="@Model.Id" />
                    <div class="form-group mb-3">
                        <label asp-for="Status" class="form-label">Trạng thái đơn hàng:</label>
                        @* THAY ĐỔI: Sử dụng asp-for và asp-items để xử lý enum một cách chính xác *@
                        <select asp-for="Status" asp-items="Html.GetEnumSelectList<OrderStatus>()" class="form-select"></select>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Cập nhật</button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index" class="btn btn-secondary">Quay lại Danh sách</a>
</div>