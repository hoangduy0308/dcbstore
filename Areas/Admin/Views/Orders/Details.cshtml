@model DCBStore.Models.Order
@using DCBStore.Models
@{
    ViewData["Title"] = "Chi tiết Đơn hàng #" + Model.Id;
}

<h3 class="mb-4">@ViewData["Title"]</h3>

@if (TempData["StatusMessage"] != null)
{
    <div class="alert alert-success">@TempData["StatusMessage"]</div>
}

<div class="row">
    <div class="col-md-8">
        <div class="card shadow-sm mb-4">
            <div class="card-header">
                <h5>Thông tin Khách hàng</h5>
            </div>
            <div class="card-body">
                <p><strong>Tên:</strong> @Model.CustomerName</p>
                <p><strong>Địa chỉ:</strong> @Model.ShippingAddress</p>
                <p><strong>Số điện thoại:</strong> @Model.PhoneNumber</p>
                <p><strong>Ghi chú:</strong> @(Model.Notes ?? "Không có")</p>
            </div>
        </div>
        <div class="card shadow-sm">
            <div class="card-header">
                <h5>Chi tiết Sản phẩm</h5>
            </div>
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Sản phẩm</th>
                            <th class="text-center">Số lượng</th>
                            <th class="text-end">Đơn giá</th>
                            <th class="text-end">Thành tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderDetails)
                        {
                            <tr>
                                <td>@item.Product.Name</td>
                                <td class="text-center">@item.Quantity</td>
                                <td class="text-end">@item.Price.ToString("N0")</td>
                                <td class="text-end">@((item.Quantity * item.Price).ToString("N0"))</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th colspan="3" class="text-end">Tổng cộng:</th>
                            <th class="text-end">@Model.Total.ToString("N0") đ</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-header">
                <h5>Cập nhật Trạng thái</h5>
            </div>
            <div class="card-body">
                <form asp-action="UpdateStatus" method="post">
                    <input type="hidden" name="orderId" value="@Model.Id" />
                    <div class="form-group mb-3">
                        <label for="status" class="form-label">Trạng thái đơn hàng:</label>
                        <select name="status" asp-for="Status" asp-items="Html.GetEnumSelectList<OrderStatus>()" class="form-control"></select>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Cập nhật</button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index" class="btn btn-secondary">Quay lại Danh sách</a>
</div>