@model IEnumerable<DCBStore.Models.Order>
@using DCBStore.Models
@{
    ViewData["Title"] = "Quản lý Đơn hàng";
}

<style>
    .table-striped > tbody > tr:nth-of-type(odd) > * {
        background-color: #f9fafb;
    }
    .badge {
        font-size: 0.8rem;
        font-weight: 600;
        padding: 0.4em 0.7em;
    }
    .badge-pending { color: #854d0e; background-color: #fef9c3; }
    .badge-shipped { color: #1e40af; background-color: #dbeafe; }
    .badge-completed { color: #15803d; background-color: #dcfce7; }
    .badge-cancelled { color: #57534e; background-color: #f5f5f4; }
</style>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="mb-0"><i class="fas fa-file-invoice-dollar me-2"></i>@ViewData["Title"]</h3>
</div>


<div class="card shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover table-striped mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="py-3 px-4">Mã Đơn</th>
                        <th class="py-3 px-4">Khách Hàng</th>
                        <th class="py-3 px-4">Ngày Đặt</th>
                        <th class="py-3 px-4">Trạng Thái</th>
                        <th class="text-end py-3 px-4">Tổng Tiền</th>
                        <th class="text-end py-3 px-4">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <th class="py-3 px-4">#@order.Id</th>
                            <td class="py-3 px-4">@order.CustomerName</td>
                            <td class="py-3 px-4">@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                            <td class="py-3 px-4">
                                @{
                                    var statusText = "";
                                    var statusClass = "";
                                    var tooltipText = "";
                                    switch (order.Status)
                                    {
                                        case OrderStatus.Pending:
                                            statusText = "Chờ xử lý";
                                            statusClass = "badge-pending";
                                            tooltipText = "Đơn hàng mới, chờ xác nhận.";
                                            break;
                                        case OrderStatus.Shipped:
                                            statusText = "Đang giao";
                                            statusClass = "badge-shipped";
                                            tooltipText = "Đơn hàng đã được gửi đi.";
                                            break;
                                        case OrderStatus.Completed:
                                            statusText = "Hoàn thành";
                                            statusClass = "badge-completed";
                                            tooltipText = "Đơn hàng đã giao thành công.";
                                            break;
                                        case OrderStatus.Cancelled:
                                            statusText = "Đã hủy";
                                            statusClass = "badge-cancelled";
                                            tooltipText = "Đơn hàng đã bị hủy.";
                                            break;
                                    }
                                }
                                <span class="badge @statusClass" data-bs-toggle="tooltip" title="@tooltipText">@statusText</span>
                            </td>
                            <td class="text-end py-3 px-4">@order.Total.ToString("N0") đ</td>
                            <td class="text-end py-3 px-4">
                                <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-eye me-1"></i>Chi tiết
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        })
    </script>
}